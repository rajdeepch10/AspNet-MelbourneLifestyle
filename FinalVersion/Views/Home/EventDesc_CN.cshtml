
@{
    Layout = "~/Views/Shared/_Layout_CN.cshtml";
}
<div class="site-section">
    <div class="container">
        <div class="row">
            <div class="col-lg-8">
                <div class="mb-4">
                    @*<div class="slide-one-item home-slider owl-carousel">
                            <div><img src="" alt="Image" class="img-fluid" id="image"></div>
                        </div>*@
                    <img src="" alt="Image" class="img-fluid" id="image">
                </div>
                <h4 class="h5 mb-4 text-black" style=" font-size: 20px; font-family: Microsoft YaHei" id="desc">活动介绍</h4>
